{
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"preserveSymlinks": true,
		"strict": true,
		"target": "es6"
	},
	"include": [
		"src/**/*"
	]
}
